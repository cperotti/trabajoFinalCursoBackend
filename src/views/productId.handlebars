<div class="p-3">
    <div class="d-flex justify-content-between">
        <a href={{linkProductos}}>Volver a listado de productos</a>
        <form action="/api/session/logout" method="get">
            <button type="submit" class="btn btn-primary" >Cerrar sesi√≥n</button>
        </form>
    </div>
    <h2 class="text-center m-2">Detalle de producto</h5>
    <div class="card mb-3 w-100">
        <div class="row g-0">
            <div class="col-md-4">
            <img src={{detail.thumbnail}} class="img-fluid rounded-start" alt="imagen">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">{{detail.title}}</h3>
                <p class="card-text">{{detail.description}}</p>
                <div class="d-flex flex-row">
                    <h5 class="me-2">Precio:</h5><span>{{detail.price}}</span>
                </div>
                <div class="d-flex flex-row">
                    <h5 class="me-2">Cantidad:</h5><span>{{detail.stock}}</span>
                </div>
                <div class="d-flex justify-content-end">
                    <Button type="button" class="btn btn-primary btn-sm">Agregar al carrito</Button>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>