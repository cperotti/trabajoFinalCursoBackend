<div class="p-3">
    <h2 class="text-center m-2">Información carrito</h5>
    {{#if hasCart}}
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Descripción</th>
      <th scope="col">Precio</th>
      <th scope="col">Cantidad</th>
    </tr>
  </thead>
  <tbody>
       {{#each cart.products}} 
            <tr>
                <td>{{this.product.title}}</td>
                <td>{{this.product.description}}</td>
                <td>{{this.product.price}}</td>
                <td>{{this.quantity}}</td>
            </tr>
       {{/each}}
  </tbody>
</table>
{{else}}
    <p class="text-center m-4">Aún no hay productos cargados en el carrito</p>
{{/if}}
</div>